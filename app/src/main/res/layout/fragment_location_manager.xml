<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="android_network.hetnet.LocationManagerFragment"
              android:weightSum="1"
              android:baselineAligned="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:freezesText="true"
                android:id="@+id/location_logs"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/LocationNetworks">

            </TableLayout>

            <TextView
                android:text="Please choose a range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:layout_marginTop="21dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rangeselector"
                android:layout_below="@+id/status"
                android:layout_marginTop="11dp"/>

            <Button
                android:text="Submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submitLocationNetworks"
                android:layout_below="@+id/rangeselector"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="33dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
